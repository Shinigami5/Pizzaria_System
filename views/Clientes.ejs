<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/cliente.css">
    <script src="js/Cliente.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="/js/notify.min.js"></script>
</head>
<body>
    <%- include('./modulos/inicio.ejs') %>
    <div class="mainHead">
        <button id="btnMain" onclick="AddNewClient()">Adicionar Novo Cliente</button>
        <% if(clientes){  %>
        <p id="NumClient" class="right">Clientes Cadastrados: <%= clientes.length %></p>
        <% }else{  %>
        <p id="NumClient" class="right">Clientes Cadastrados: 0</p>
        <% }       %>



        <div id="fomulario" class="Add oculto">
            <form  action="" method="post">
                <label class="left" for="">Nome:    </label>
                <input class="right" type="text">
                <br>
                <label class="left" for="">Telefone: </label>
                <input class="right" type="number">
                <input id="btnSubmit" type="button" value="Eviar" onclick="enviar()">
            </form>
        </div>
    </div>
    <div class="main">

        <% if(clientes){ %>
        <%    for(let i=0; i < clientes.length; i++){  %>
            <div id="<%= clientes[i].id%>" class="blocoCliente TextCenter">
                <p id="cima">id: <%= clientes[i].id %></p>
                <hr>
                <p class="campo">nome: <%= clientes[i].nome %></p>
                <p class="campo">telefone: <%= clientes[i].tele %></p>
                <button onclick="editClient(event)">editar</button>
                <button onclick="deleteClient(event)">excluir</button>
            </div>
        <% }}  %>


    </div>
</body>
</html>